<table class="table">
  <caption>What in your cart</caption>
  <thead>
  <tr>
    <th>#</th>
    <th>Title</th>
    <th>Price</th>
    <th>Qantity</th>
    <th>Price</th>
  </tr>
  </thead>
  <tbody>
  <% i = 0 %>
  <% total_price = 0 %>
  <% total_qty = 0 %>
  <% @items.each do |item| %>
  <tr>

    <th scope="row"><%= i +=1%></th>
    <td><%= item[0].title %></td>
    <td><%= item[0].price %></td>
    <td><%= item[1] %></td>
    <td><%= item[1].to_i * item[0].price %></td>
  </tr>
      <% total_qty +=  item[1].to_i %>
      <% total_price += item[1].to_i * item[0].price %>
  <% end %>

  <tr>

    <th scope="row"></th>
    <td></td>
    <td></td>
    <td><%= total_qty %></td>
    <td>Total <%= total_price %> Rub.</td>
  </tr>

  </tbody>
</table>

